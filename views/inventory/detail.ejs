<h1><%= title %></h1>

<% if (vehicle) { %>
    <div class="vehicle-detail-container">
        <div class="vehicle-image">
            <% if (vehicle.inv_image) { %>
                <img src="<%= vehicle.inv_image %>" 
                     alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
            <% } else if (vehicle.inv_thumbnail) { %>
                <img src="<%= vehicle.inv_thumbnail %>" 
                     alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
            <% } else { %>
                <div class="no-image">No Image Available</div>
            <% } %>
        </div>
        
        <div class="vehicle-info">
            <h2><%= vehicle.inv_make %> <%= vehicle.inv_model %></h2>
            <p><strong>Year:</strong> <%= vehicle.inv_year %></p>
            <p><strong>Price:</strong> $<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %></p>
            
            <% if (vehicle.inv_description) { %>
                <div class="description">
                    <h3>Description</h3>
                    <p><%= vehicle.inv_description %></p>
                </div>
            <% } %>
            
            <div class="specs">
                <h3>Specifications</h3>
                <% if (vehicle.inv_color) { %>
                    <p><strong>Color:</strong> <%= vehicle.inv_color %></p>
                <% } %>
                <% if (vehicle.inv_miles) { %>
                    <p><strong>Mileage:</strong> <%= new Intl.NumberFormat('en-US').format(vehicle.inv_miles) %> miles</p>
                <% } %>
            </div>
            
            <div class="detail-actions">
                <button class="fav-toggle" data-inv-id="<%= vehicle.inv_id %>" aria-label="Save vehicle" aria-pressed="false">Save</button>
                <a href="javascript:history.back()" class="back-btn">
                    ‚Üê Back to Vehicles
                </a>
            </div>
        </div>
    </div>
<% } else { %>
    <p>Vehicle not found.</p>
<% } %>