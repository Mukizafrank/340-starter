<h1>
    <%= title %>
</h1>
<%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <div class="account-management">
                <% if (locals.accountData) { %>
                    <% if (locals.accountData.account_type==="Employee" || locals.accountData.account_type==="Admin" ) {
                        %>
                        <h2>Welcome, <%= locals.accountData.account_firstname %> (<%= locals.accountData.account_type %>
                                    )</h2>
                        <% } else { %>
                            <h2>Welcome, <%= locals.accountData.account_firstname %>
                            </h2>
                            <% } %>
                                <% } %>

                                    <h3>Account Management</h3>
                                    <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account
                                            Information</a></p>

                                    <% if (locals.accountData && (locals.accountData.account_type==="Employee" ||
                                        locals.accountData.account_type==="Admin" )) { %>
                                        <h3>Inventory Management</h3>
                                        <p><a href="/inv/">Manage Inventory</a></p>
                                        <% } %>
            </div>